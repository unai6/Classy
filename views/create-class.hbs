<form action="/classy/create-class" method="post">
    <div>
        <label for="class-date-input">
            When would you like to create your class?
        </label>
        <input type="date" name="classDate" id="class-date-input">
        <label for ='name'>Name</label>
        <input type='text' name='name'>
        <label for ='description'>Description</label>
        <input type='text' name='description'>
       
        
    </div>
    <button> Create a Class </button>

    <label for='select'>Assign a Class</label>

    
    <select name='student'> 
    {{#each users}}
        <option value ={{_id}}>{{name}}</option>
    {{/each}}
    </select>
</form>
