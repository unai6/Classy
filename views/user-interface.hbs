<nav>
    <a href='/home'>Home</a>
</nav>

<div>
    <h2>YOUR CLASSES</h2>
    Welcome back! 
</div>

<!--Teacher interface-->
{{#each classes}}
    {{#if ../isTeacher }}

    {{this.classDate2}}<br>
    {{this.time}} 
    - 
    {{this.name}} 
    {{this.student.0.name}} <a href='/classy/class-details'>+</a>

    <form action ='/classy/{{this._id}}/delete' method='POST'>  
        <button type ='submit'>DELETE</button>
        </form>
    <a href='/classy/{{this._id}}/edit'>EDIT</a><br>

    {{/if}}
{{/each}} 

{{#if isTeacher}}
<a href='/classy/create-class'>Create a new class</a>
{{/if}}


<!-- Student interface -->

{{#unless isTeacher}}
    {{#each classes}}

    {{this.classDate2}}<br>
    {{this.time}}
    {{this.name}} <a href='/class-details.hbs'>+</a>
    {{this.description}}<br>

    {{/each}}
{{/unless}}

